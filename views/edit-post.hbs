<html>
  <head>
    <title>Creating Blog Page</title>
    <link rel="stylesheet" href="../public/Asset/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <nav>
      <div class="left">
        <img src="../public/Asset/images/download.png" alt="logo">
        <ul>
            <li><a href="/">Home</a></li>    
        </ul>
        <ul>
          <li><a href="/blog"style="color: rgb(218, 106, 32);">Blog</a></li>
        </ul> 
        </div>
        <div class="right">
        {{#if isLogin}}
              <div class="btn-group ms-auto">
                <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                  <span>Hallo, {{user.name}}</span>
                </button>
                <ul class="dropdown-menu">
                    <li class="drop"><a class="dropdown-item" href="/logout">Logout</a></li>
                    <li class="drop"><a class="dropdown-item" href="ContactForm">Contact Me</a>
                </ul>
            </div>
            {{else}}
              <div class="btn-group ms-auto">
                <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                  Log In
                </button>
                <ul class="dropdown-menu">
                    <li class="drop"><a class="dropdown-item" href="/login">Login</a></li>
                    <li class="drop"><a class="dropdown-item" href="/Register">Register</a></li>
                    <li class="drop"><a class="dropdown-item" href="ContactForm">Contact Me</a>
                </ul>
            </div>
            {{/if}}
        </div>
    </nav>
      <div class="blog-form-edit">
        <div class="form-container">
          <form action="/edit-post/{{blog.id}}" method="POST" enctype="multipart/form-data">
            <h1>Edit Post Blog</h1>
            <div>
              <label for="input-blog-title">Title</label>
              <input name="updateTitle" id="input-blog-title" value="{{blog.title}}" />
            </div>
            <div>
              <label for="input-blog-content">Content</label>
              <textarea name="updateContent" id="input-blog-content">{{blog.content}}</textarea>
            </div>
            <div class="mb-3">
              <label for="inputImage" class="form-label">Upload Image</label>
              <input name="updateImages" class="form-control" type="file" id="inputImage">
            </div>
            
            <div class="button-group">
              <button type="submit">Edit Post</button>
            </div>
            <br>
          </form>
        </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>           
  </body>
</html>
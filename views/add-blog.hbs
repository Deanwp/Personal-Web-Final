<html>
    <head>
        <title>Halaman Blog</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <link rel="stylesheet" href="../public/Asset/css/style.css"/> 
    </head>
    <body>
        <nav>
      <div class="left">
        <img src="../public/Asset/images/download.png" alt="logo">
        <ul>
            <li><a href="/">Home</a></li>    
        </ul>
        <ul>
          <li><a href="/blog"style="color: rgb(218, 106, 32);">Blog</a></li>
        </ul> 
        </div>
        <div class="right">
        {{#if isLogin}}
              <div class="btn-group ms-auto">
                <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                  <span>Hallo, {{user.name}}</span>
                </button>
                <ul class="dropdown-menu">
                    <li class="drop"><a class="dropdown-item" href="/logout">Logout</a></li>
                    <li class="drop"><a class="dropdown-item" href="ContactForm">Contact Me</a>
                </ul>
            </div>
            {{else}}
              <div class="btn-group ms-auto">
                <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                  Log In
                </button>
                <ul class="dropdown-menu">
                    <li class="drop"><a class="dropdown-item" href="/login">Login</a></li>
                    <li class="drop"><a class="dropdown-item" href="/Register">Register</a></li>
                    <li class="drop"><a class="dropdown-item" href="ContactForm">Contact Me</a>
                </ul>
            </div>
            {{/if}}
        </div>
    </nav>
          <div class="container-fluid container-body d-flex align-items-center justify-content-center mt-5">
                <div class="container-form" >
                    <p class="h1 text-center mb-5">Create Post Blog</p>
                    <form action="/blog" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                          <label for="inputTitle" class="form-label">Title</label>
                          <input name="inputTitle" type="text" class="form-control" id="inputTitle">
                        </div>
                        <div class="mb-3">
                          <label for="inputContent" class="form-label">Content</label>
                          <textarea name="inputContent" class="form-control" id="inputContent" rows="6"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="inputImage" class="form-label">Upload Image</label>
                            <input name="inputImages" class="form-control" type="file" id="inputImage">
                         </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="button-orange mx-0">Submit</button>
                      </form>

                </div>
          </div>
           <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>           
    </body>
</html>
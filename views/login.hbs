<html>
  <head>
    <title>Creating Blog Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/Asset/css/style.css" />
  </head>
  <body>
    <nav>
      <div class="left">
        <img src="../public/Asset/images/download.png" alt="logo">
        <ul>
            <li><a href="/">Home</a></li>    
        </ul>
        <ul>
          <li><a href="/blog">Blog</a></li>
        </ul> 
        </div>
        <div class="right">
            <div class="btn-group ms-auto">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                  Log In
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/Register">Register</a></li>
                    <li class="drop"><a class="dropdown-item" href="ContactForm">Contact Me</a>
                </ul>
            </div>
        </div>
    </nav>
    {{#if messages.danger}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{messages.danger}}
        <button type="button" class="btn-close mb-0 mt-0" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    {{/if}}
    {{#if messages.success}}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
          {{messages.success}}
          <button type="button" class="btn-close mb-0 mt-0" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    {{/if}}
      <div class="blog-form-edit">
        <div class="form-container">
          <form action="/login" method="POST">
            <h1>Login</h1>
            <div>
              <label for="input-blog-title">Email</label>
              <input name="addEmail" id="input-blog-title"/>
            </div>
            <div>
              <label for="input-blog-title">Password</label>
              <input type="password" name="addPassword" id="input-blog-title"/>
            </div>
            <div class="button-group">
              <button type="submit">Log In</button>
            </div>
          </form>
        </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>